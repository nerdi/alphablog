<h1 align="center">Welcome to <%= @user.username %>'s page'</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user, size: 250 %>
  </div>
</div>
<h4 align="center"><%= @user.username %>'s articles</h4>
<div class="center">
  <%= will_paginate @user_articles %>
</div>
<%= render 'articles/article', obj: @user_articles %>
<% if logged_in? && current_user.admin? %>
  <%= link_to "Delete user", user_path(@user), method: :delete,
                                data:{confirm: "Are you sure you want to delete the user and all their articles?"} %>
<% end %>
<div class="center">
  <%= will_paginate @user_articles %>
</div>
